@model IEnumerable<TaskItem>
@{
    ViewData["Title"] = "Tasks";
}

<div class="row">
    <div class="col-lg-12">
        @Html.ActionLink("Create New Task", "Create", "Tasks", null, new { @class = "btn btn-success" })
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>Task Name</td>
                    <td>Is Task Completed?</td>
                    <td>Task Created</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var task in Model)
                    {
                        <tr>
                            <td>@task.TaskName</td>
                            <td>@task.IsCompleted</td>
                            <td>@task.DateCreated.ToShortDateString()</td>
                            <td class="text-center">@Html.ActionLink("Edit", "Edit", "Tasks", new { Id = task.Id }) | @Html.ActionLink("Delete", "Delete", "Tasks", new { Id = task.Id }) </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">
                            No Records Found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

